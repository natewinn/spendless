.container
  %legend Budgets
  %table.table.table-striped.table-hover
    .thead
      %tr
        %th Budget Id
        %th Limit
    .tbody
      - @budgets.each do |budget|
        %tr
          %td= budget.id
          %td= budget.limit

  = link_to "Add a Budget", new_budget_path, :class => "btn btn-success"
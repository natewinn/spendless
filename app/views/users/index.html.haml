/= Title =/
- content_for(:title, 'Users')

.container
	%legend Create Profile
	  
	%table.table.table-striped.table-hover
		.thead
			%tr
				%th First Name
				%th Last Name
				%th Email
				%th Password
				%th Phone Number
				%th Birthday
				%th Update Profile
		.tbody
			- @users.each do |user|
				%tr
					%td= user.first_name
					%td= user.last_name
					%td= user.email
					%td= user.password
					%td= user.phone_number
					%td= user.birthday
					%td= button_to 'Edit', edit_user_path(user), method: "get", :class => "btn btn-xs btn-danger"
	= link_to "Add a User", new_user_path, :class => "btn btn-success"
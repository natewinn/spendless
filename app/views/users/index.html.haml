- content_for(:title, 'Your Profile')

- @users.each do |user|
    .container
        %legend 
            Profile for #{user.first_name} #{user.last_name}
            .col-md-12
                %h6.col.md-4
                %h4 Name:  #{user.first_name} #{user.last_name}
                %h4 Email:  #{user.email}
                %h4 Phone Number:  #{phone(user.phone_number)}
                %h4 Birthday: #{format_date(user.birthday)}
                = button_to 'Edit Profile', edit_user_path(user), method: "get", :class => "btn btn-xs btn-warning"
                = button_to 'Delete Profile', user, method: "delete", :class => "btn btn-xs btn-danger", :data => { :confirm => "Are you sure you want to delete?" }
                .col.md-8
                %br
                %br     
        = render :template => 'budgets/index'
        %br
        = render :template => 'accounts/index'
        %br
        .container
            %legend Transactions
            %table.table.table-striped.table-hover
                .thead
                    %tr
                        %th= "Amount"
                        %th= "Transaction with"
                        %th= "Category"
                        %th= "Transaction date"
                .tbody
                - user.transactions.each do |t|
                    %tr
                        %td= money(t.amount)
                        %td= t.name
                        %td= t.category
                        %td= format_date(t.transaction_date)

            = link_to "Add Transaction", new_transaction_path, :class => "btn btn-success"
%br
%br